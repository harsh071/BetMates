<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.betmates">

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".presentation.SignUp"></activity>
        <activity android:name=".presentation.Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".presentation.AcceptRejectBet"/>
        <activity android:name=".presentation.UserProfile"/>
        <activity android:name=".presentation.CurrentBets"/>
        <activity android:name=".presentation.BetHistory"/>
        <activity android:name=".presentation.FriendsList"/>
        <activity android:name=".presentation.CreateBet"/>
        <activity android:name=".presentation.FriendSelector"/>
        <activity android:name=".application.MainActivity"/>
        <activity android:name=".presentation.EditProfile"></activity>
    </application>

</manifest>